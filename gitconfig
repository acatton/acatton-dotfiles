[include]
  path = ~/.gitconfig.d/identity

[log]
  decorate = true

[color]
  ui = always

[color "decorate"]
  HEAD = blue
  tag = black bold
  remoteBranch = red
  branch = green

[alias]
  ci = commit
  co = checkout
  branches = branch -av

[pull]
  rebase = true

[gpg]
  program = gpg2

[credential "https://git-codecommit.eu-central-1.amazonaws.com/"]
  helper = "!aws codecommit credential-helper "
  UseHttpPath = true
