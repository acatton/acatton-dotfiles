bindkey -M vicmd 'll' vi-change-eol
bindkey -M vicmd 'é' vi-forward-word
bindkey -M vicmd 'É' vi-forward-blank-word
bindkey -M vicmd 'h' vi-replace
bindkey -M vicmd 'c' vi-backward-char
bindkey -M vicmd 'r' vi-forward-char
bindkey -M vicmd "${terminfo[kdch1]}" vi-delete-char
bindkey "${terminfo[kdch1]}" delete-char
bindkey -M vicmd "${terminfo[kbs]}" vi-backward-delete-char
bindkey "${terminfo[kbs]}"  backward-delete-char
bindkey '^A' beginning-of-line
bindkey '^E' end-of-line
bindkey -M vicmd '^A' vi-beginning-of-line
bindkey -M vicmd '^E' vi-end-of-line
bindkey -M vicmd "${terminfo[home]}" vi-beginning-of-line
bindkey "${terminfo[home]}" beginning-of-line

# $terminfo sucks and doesn't contains these lines
bindkey -M vicmd '\e[F' vi-end-of-line
bindkey '\e[F' end-of-line
